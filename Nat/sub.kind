// Subtracts one natural number from another.
// 1st: The number to subtract from.
// 2nd: The number to subtract.
// = The result of 1st - 2nd, or zero if 2nd > 1st.
Nat/sub
: ∀(m: Nat)
  ∀(n: Nat)
  Nat
= λ{
  #Zero: λn #Zero{}
  #Succ: λm.pred λ{
    #Zero: #Succ{m.pred}
    #Succ: λn.pred (Nat/sub m.pred n.pred)
  }
}
// Tests the subtraction operation for natural numbers.

// Test: 0 - 0 = 0.
TEST_0
: (Equal Nat (Nat/sub #Zero{} #Zero{}) #Zero{})
= #Refl{}

// Test: 5 - 0 = 5.
TEST_1
: (Equal Nat (Nat/sub #Succ{#Succ{#Succ{#Succ{#Succ{#Zero{}}}}}} #Zero{}) #Succ{#Succ{#Succ{#Succ{#Succ{#Zero{}}}}}})
= #Refl{}

// Test: 0 - 5 = 0 (subtraction doesn't go below zero).
TEST_2
: (Equal Nat (Nat/sub #Zero{} #Succ{#Succ{#Succ{#Succ{#Succ{#Zero{}}}}}}) #Zero{})
= #Refl{}

// Test: 5 - 2 = 3.
TEST_3
: (Equal Nat (Nat/sub #Succ{#Succ{#Succ{#Succ{#Succ{#Zero{}}}}}} #Succ{#Succ{#Zero{}}}) #Succ{#Succ{#Succ{#Zero{}}}})
= #Refl{}

// Test: 10 - 7 = 3.
TEST_4
: (Equal Nat (Nat/sub #Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Zero{}}}}}}}}}}} #Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Zero{}}}}}}}} ) #Succ{#Succ{#Succ{#Zero{}}}})
= #Refl{}

// Test: 8 - 8 = 0.
TEST_5
: (Equal Nat (Nat/sub #Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Zero{}}}}}}}}} #Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Zero{}}}}}}}}}) #Zero{})
= #Refl{}

// Test: 3 - 5 = 0 (subtraction doesn't go below zero).
TEST_6
: (Equal Nat (Nat/sub #Succ{#Succ{#Succ{#Zero{}}}} #Succ{#Succ{#Succ{#Succ{#Succ{#Zero{}}}}}}) #Zero{})
= #Refl{}

// Test: (a - b) - c = a - (b + c).
TEST_7
: (Equal Nat (Nat/sub (Nat/sub #Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Zero{}}}}}}}}}}} #Succ{#Succ{#Succ{#Zero{}}}}) #Succ{#Succ{#Zero{}}}) (Nat/sub #Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Succ{#Zero{}}}}}}}}}}} (Nat/add #Succ{#Succ{#Succ{#Zero{}}}} #Succ{#Succ{#Zero{}}})))
= #Refl{}