use Parser/ as PS/
use Nat/ as N/
use String/ as S/
use Equal/ as E/
use Pair/ as Pair/

// Test: Creating a new parser state
T0 
: (E/Equal 
    PS/State 
    (PS/new_parser_state "hello") 
    (PS/State/new "hello" #Zero))
= #Refl

// Test: Accessing State fields
T1 
: (E/Equal 
    (P/Pair S/String N/Nat)
    (#Pair{
        (PS/State/input (PS/State/new "world" #5))
        (PS/State/index (PS/State/new "world" #5))})
    (#Pair{"world" #5}))
= #Refl