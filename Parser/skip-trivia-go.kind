// Auxiliary function for skip-trivia
// Accumulates the number of skipped characters
Parser/skip-trivia-go
: ∀(acc: Nat)
  ∀(cs: String)
  (Pair Nat String)
| acc #Nil        = (#Pair{acc #Nil{}})
| acc #Cons{c cs} = if (Char/is-space c) {
  (Parser/skip-trivia-go (#Succ{acc}) cs)
} else if (Parser/is-comment (#Cons{c cs})) {
  (Parser/skip-comment acc cs)
} else {
  #Pair{acc (#Cons{c cs})}
}
