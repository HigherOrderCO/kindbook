use Bool/ as B/
use String/ as S/

// Converts a Bool to its string representation.
// - 1st: The Bool value to convert.
// = A string representation of the Bool value.
B/show
: ∀(b: B/Bool)
  S/String
= λ{
  #True: "true"
  #False: "false"
}


//TEST//

use Bool/ as B/
use Equal/ as E/

B/T0
: (E/Equal B/Bool (B/show #True{}) (#True{}))
= #Refl{}

B/T1
: (E/Equal B/Bool (B/show #False{}) #False{})
= #Refl{}

