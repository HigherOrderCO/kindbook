// Bend/Fun/Num/show

Bend/Fun/Num/show : (Show Bend/Fun/Num/Num)
  (Show.new Bend/Fun/Num/show/show_num)

Bend/Fun/Num/show/show_num (num: Bend/Fun/Num/Num) : String
| #U24 n = (Nat/show n)
| #I24 n = (Bend/Fun/Num/show/show_int n)
| #F24 f = (F64/show f)

Bend/Fun/Num/show/show_int (n: Int) : String
| #Pos n     = (String/concat "+" (Nat/show n))
| #NegSuc n  = (String/concat "-" (Nat/show (Nat/succ n)))
