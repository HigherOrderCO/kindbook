// Converts a nat to its binary representation as Bits.
// - n: The nat to convert.
// = The binary representation of the number as Bits.
Bits/from-nat : Nat -> Bits
| n = (Nat/to-bits n)

#test: (Bits/from-nat #0) == #O{#E}
#test: (Bits/from-nat #1) == #I{#E}
#test: (Bits/from-nat #2) == #O{#I{#E}}
#test: (Bits/from-nat #3) == #I{#I{#E}}
#test: (Bits/from-nat #8) == #O{#O{#O{#I{#E}}}}