use Maybe/ as M/
use Pair/ as P/
use Bits/ as BS/
use BinMap/ as BM/

// Core Types
// ----------

HVM/RNet : *
= data[]{ #RN{} : HVM/RNet }

HVM/HVM : * -> *
| K = ∀(net: HVM/RNet) (M/Maybe (P/Pair HVM/RNet K))

// Initialization
// --------------

HVM/net_new : HVM/RNet
= #RN{}

// Running
// -------

HVM/run : ∀(X: *) (HVM/HVM X) -> (M/Maybe X)
= λA λhvm match (hvm HVM/net_new) {
  #None: #None
  #Some{x}: #None
}

















