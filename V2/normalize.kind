// Normalizes a V2 vector.
// - v: Input vector.
// = Normalized vector or None if zero vector.
V2/normalize : V2 -> (Maybe V2)
| #V2{x y} =
  if (V2/is-zero #V2{x y}) {
    #None
  } else {
    let len = (V2/length #V2{x y})
    #Some{(V2/div-scalar #V2{x y} len)}
  }

#test: (V2/normalize #V2{x: 3 y: 4}) == #Some{#V2{x: 3 y: 4}}
#test: (V2/normalize #V2{x: 0 y: 0}) == #None
